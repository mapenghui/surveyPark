<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.atguigu.surveypark.model">
	<class name="Page" table="pages">
		<id name="id" column="id" type="integer">
			<generator class="identity"></generator>
		</id>
		<property name="title" column="title" type="string" length="50"></property>
		<property name="description" column="description" type="string" length="50"></property>
		
		<!-- 映射从Page到Survey的多对一关联 -->
		<many-to-one name="survey" class="Survey" column="surveyid"></many-to-one>
		
		<!-- 映射从Page到Question的多对一关联 -->
		<set name="questions" inverse="true" order-by="id">
			<key column="pageid"></key>
			<one-to-many class="Question"/>
		</set>
		
	</class>
	
</hibernate-mapping>